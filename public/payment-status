/* --- Helper: plan label mapping (keeps labels user-friendly) --- */
function getPlanLabel(planType) {
  const labels = {
    prueba: "Prueba sistema",
    basic3m: "B√°sico 3 meses",
    basic6m: "B√°sico 6 meses",
    basic12m: "B√°sico 12 meses",
    plus3m: "Plus 3 meses",
    plus6m: "Plus 6 meses",
    plus12m: "Plus 12 meses",
    basic3mfull: "B√°sico 3 meses (Contado)",
    basic6mfull: "B√°sico 6 meses (Contado)",
    basic12mfull: "B√°sico 12 meses (Contado)",
    plus3mfull: "Plus 3 meses (Contado)",
    plus6mfull: "Plus 6 meses (Contado)",
    plus12mfull: "Plus 12 meses (Contado)"
  };
  return labels[planType] || planType || "No asignado";
}

        // After retrieving userData:
// Payment UI logic
function updatePaymentStatusSection(userData) {
  const paymentWarningEl = document.getElementById("payment-warning");
  const completePaymentContainerEl = document.getElementById("complete-payment");
  const paymentLinkEl = document.getElementById("payment-link");

  if (!paymentWarningEl || !completePaymentContainerEl || !paymentLinkEl) {
    console.warn("Payment section elements missing");
    return;
  }

  const wompiLinks = {
    prueba: "https://u.wompi.sv/539830hfH",
    basic3m: "https://u.wompi.sv/379910xeV",
    basic6m: "https://u.wompi.sv/380639rcA",
    basic12m: "https://u.wompi.sv/3806769qs",
    plus3m: "https://u.wompi.sv/380690Gbx",
    plus6m: "https://u.wompi.sv/380695_Np",
    plus12m: "https://u.wompi.sv/380702xQa",
    basic3mfull: "https://u.wompi.sv/478091RVm",
    basic6mfull: "https://u.wompi.sv/387432nHU",
    basic12mfull: "https://u.wompi.sv/387433i2m",
    plus3mfull: "https://u.wompi.sv/387439i_2",
    plus6mfull: "https://u.wompi.sv/387445Beb",
    plus12mfull: "https://u.wompi.sv/387447ZDj"
  };

  // Hide by default
  paymentWarningEl.style.display = "none";
  completePaymentContainerEl.style.display = "none";

  const status = (userData.paymentStatus || "").toLowerCase();
  const plan = userData.planType;

  if (status === "pending") {
    paymentWarningEl.style.display = "block";
    completePaymentContainerEl.style.display = "block";
    const link = wompiLinks[plan] || null;
    if (link) {
      paymentLinkEl.href = link;
      paymentLinkEl.textContent = "Completa tu pago ahora üîó";
    } else {
      paymentLinkEl.href = "#";
      paymentLinkEl.textContent = "Enlace de pago no disponible";
      paymentLinkEl.style.pointerEvents = "none";
      paymentLinkEl.style.opacity = "0.5";
    }
  } else if (status === "completed") {
    paymentWarningEl.style.display = "none";
    completePaymentContainerEl.innerHTML = `<div style="color: green; font-weight: bold;">‚úÖ Pago confirmado. ¬°Gracias por unirte!</div>`;
    completePaymentContainerEl.style.display = "block";
  } else {
    paymentWarningEl.style.display = "none";
    completePaymentContainerEl.style.display = "none";
  }
}

// Fetch and run
firebase.auth().onAuthStateChanged(user => {
  if (!user) return;

  firebase.firestore().collection("users").doc(user.uid).get()
    .then(doc => {
      if (!doc.exists) return;
      const userData = doc.data();

      // üîπ Estado de Pago button logic
      // üîπ Payment button logic
if ((userData.paymentStatus || "").toLowerCase() === "pending") {
  const completePaymentEl = document.getElementById("complete-payment");
  const paymentLinkEl = document.getElementById("payment-link");

  if (completePaymentEl && paymentLinkEl) {
    completePaymentEl.style.display = "block";

    // Prefer Firestore checkoutLink
    if (userData.checkoutLink) {
      paymentLinkEl.href = userData.checkoutLink;
    } else {
      // fallback: Wompi link map
      const wompiLinks = {
        prueba: "https://u.wompi.sv/539830hfH",
        basic3m: "https://u.wompi.sv/379910xeV",
        basic6m: "https://u.wompi.sv/380639rcA",
        basic12m: "https://u.wompi.sv/3806769qs",
        plus3m: "https://u.wompi.sv/380690Gbx",
        plus6m: "https://u.wompi.sv/380695_Np",
        plus12m: "https://u.wompi.sv/380702xQa",
        basic3mfull: "https://u.wompi.sv/478091RVm",
        basic6mfull: "https://u.wompi.sv/387432nHU",
        basic12mfull: "https://u.wompi.sv/387433i2m",
        plus3mfull: "https://u.wompi.sv/387439i_2",
        plus6mfull: "https://u.wompi.sv/387445Beb",
        plus12mfull: "https://u.wompi.sv/387447ZDj"
      };

      if (userData.planType && wompiLinks[userData.planType]) {
        paymentLinkEl.href = wompiLinks[userData.planType];
      }
    }
  }
} else if ((userData.paymentStatus || "").toLowerCase() === "completed") {
  const completePaymentEl = document.getElementById("complete-payment");
  if (completePaymentEl) {
    completePaymentEl.innerHTML = `<div style="color:green;font-weight:bold;">‚úÖ Pago confirmado. ¬°Gracias por unirte!</div>`;
    completePaymentEl.style.display = "block";
  }
}

    })
    .catch(err => console.error("Error fetching user data:", err));
});
</script>

    
